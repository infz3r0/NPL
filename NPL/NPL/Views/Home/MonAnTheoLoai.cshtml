@using NPL.Models
@using PagedList.Mvc
@model PagedList.IPagedList<MonAn>

@{
    ViewBag.Title = "MonAnTheoLoai";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container">
    <div class="row justify-content-center">
        <div class="col-12">
            <h4 class="title text-center">
                <span class="pull-left"><span class="text"><span class="line">CÁC MÓN ĂN THEO LOẠI: @ViewBag.TenLoai</span></span></span>
            </h4>

            <div class="row">
                @foreach (MonAn item in Model)
                {
                    <div class="col-md-4 col-sm-12">
                        <a class="item-name" href="@Url.Action("Details", "Home", new { id = item.IDMonAn })">
                            <div class="box-item">
                                <div class="img-thumbnail">
                                    <img src="@Url.Content("~/Images/MonAn/" + item.HinhAnh)" />
                                </div>
                                <div class="info">
                                    <p>@item.TenMonAn</p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>


    @Html.PagedListPager(Model, page => Url.Action("MonAnTheoLoai", new { page, idLoai = Model[0].IDLoai }))
</section>

<div class="container">
    <div class="row">
        <div class="col">
            <div class="fb-like" data-href="@Url.Content("http://npl.somee.com/")" data-layout="button_count" data-action="like" data-size="small" data-show-faces="true" data-share="true"></div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="fb-comments" data-href="@Url.Content("http://npl.somee.com/")" data-numposts="5"></div>
        </div>
    </div>
</div>